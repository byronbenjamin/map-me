<script>
 var trips = <%= @trips.to_json.inspect.html_safe %>;
</script>
<% if @user.username == current_user.username %>
  <p class="text-right"><%= link_to 'Edit Profile', edit_user_path(@user) %></p>
<% end %>
<p id="notice"><%= notice %></p>
<h1 class="text-center"> <%= @user.username%>'s map</h1>
<div class="section">
  <div id="map-container">
    <div id="map-canvas"></div>
  </div>
</div>

  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">

            <% if @user.username == current_user.username %>
            <!-- Add Trip Modal -->
            <div id="trip-modal" class="modal fade">
              <div class="modal-dialog">
                  <div class="modal-content">

                      <div class="modal-body">

                      </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                  </div>
              </div>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-primary add-trip">Add Trip</button>
            <a href="#" class="btn btn-primary">Add Future Trip</a>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

  <div class="section">
      <div class="container">
        <div class="row">
          <div class="trip-list col-md-6">
            <h1 class="text-center">Places Visited</h1>
            <p></p>
            <% if @trips.count > 0 %>
              <% @trips.each do |trip| %>
                <p class="text-center"><%= trip.name %></p>
              <% end %>
            <% else %>
              <p class="no-trips text-center"> No trips added.</p>
            <% end %>
            <p></p>
          </div>
          <div class="col-md-6">
            <h1 class="text-center">Future Trips</h1>
            <p></p>
            <p class="text-center"></p>
            <p></p>
          </div>
        </div>
      </div>
    </div>
